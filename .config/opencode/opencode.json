{
  "$schema": "https://opencode.ai/config.json",
  "model": "opencode/grok-code",
  "provider": {
    "ollama": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "Ollama (local)",
      "options": {
        "baseURL": "http://localhost:11434/v1"
      },
      "models": {
        "llama3.2": {
          "name": "Llama 3.2"
        }
      }
    },
    "ch.at": {
      "name": "[FREE] ch.at - OpenAI",
      "npm": "@ai-sdk/openai-compatible",
      "api": "openai",
      "options": {
        "baseURL": "https://ch.at/v1",
        "apiKey": "null"
      },
      "models": {
        "gpt-5": {
          "name": "GPT 5"
        },
        "gpt-mini": {
          "name": "GPT 5"
        }
      }
    },
    "pollinations": {
      "name": "[FREE] Pollinations",
      "npm": "@ai-sdk/openai-compatible",
      "options": {
        "baseURL": "https://text.pollinations.ai/openai/"
      },
      "models": {
        "openai-large": {
          "name": "openai-large"
        },
        "deepseek": {
          "name": "deepseek"
        },
        "deepseek-reasoning": {
          "name": "deepseek-reasoning"
        },
        "mistral": {
          "name": "mistral"
        },
        "openai": {
          "name": "openai"
        },
        "openai-fast": {
          "name": "openai-fast"
        },
        "openai-reasoning": {
          "name": "openai-reasoning"
        }
      }
    }
  }
}